<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_back"
            android:padding="15dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/tvProfile"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_right"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_check"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="20dp">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/ivStudent"
                android:layout_width="100dp"
                android:padding="10dp"
                android:background="@drawable/profile_shape"
                android:layout_height="100dp"
                app:srcCompat="@drawable/student1"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Darshan Asalaliya"
                android:layout_centerVertical="true"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/ivStudent"/>

            <TextView
                android:id="@+id/tvUniqueId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 2000200112"
                android:layout_centerVertical="true"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/ivStudent"
                android:layout_below="@id/tvName"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Email">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Dob">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Mobile No">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Education">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Select Course">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Gender">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textEnglishSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="English Skill">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textDestinationCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Destination Country">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textIeltsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Ielts Date">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Address">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardian's Information"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textGuardianName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textGuardiaMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Mobile No">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textGuardiaRelation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Relationship">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textGuardiaAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/orange"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/orange"
                android:layout_marginBottom="20dp"
                android:hint="Address">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>